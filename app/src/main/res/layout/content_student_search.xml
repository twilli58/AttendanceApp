<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/useroption"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UIActivity.StudentSearchActivity"
    tools:showIn="@layout/activity_student_search">


        <EditText
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:layout_marginTop="117dp"
            android:ems="10"
            android:id="@+id/nameSearch"
            android:background="#ffffff"
            android:hint="@string/nameSearch"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchTxt"
        android:id="@+id/searchTxt"
        android:textSize="35dp"
        android:layout_above="@+id/searchBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp" />

    <Button
        style="@style/Platform.ThemeOverlay.AppCompat.Dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/searchBtn"
        android:id="@+id/searchBtn"
        android:layout_gravity="center_vertical"
        android:onClick="click_StudentList"
        android:textSize="15dp"
        android:background="#8a9c1a"
        android:textColor="#ffffff"
        android:layout_above="@+id/newStudBtn"
        android:layout_toRightOf="@+id/newCourseBtn"
        android:layout_toEndOf="@+id/newCourseBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Student"
        android:id="@+id/newStudBtn"
        android:background="#84970e"
        android:textColor="#ffffff"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:onClick="click_Database"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/nameSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newCourseBtn"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:id="@+id/newCourseBtn"
        android:textColor="#ffffff"
        android:background="#84970e"
        android:layout_alignTop="@+id/newStudBtn"
        android:layout_toRightOf="@+id/newStudBtn"
        android:layout_toEndOf="@+id/newStudBtn"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />


</RelativeLayout>

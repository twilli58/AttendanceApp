<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/extras"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UIActivity.UserPortalActivity"
    tools:showIn="@layout/activity_user_portal">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginTop="252dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        <Button
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/manageBtn"
            android:id="@+id/manageBtn"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="#84970e"
            android:textSize="25sp"
            android:layout_weight="0.04"
            android:onClick="click_Manage" />

            <Button
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/rollBtn"
                android:id="@+id/rollBtn"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#84970e"
                android:textSize="25sp"
                android:layout_weight="0.04"
                android:onClick="click_RollCall" />

            <Button
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/statBtn"
                android:id="@+id/statBtn"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#84970e"
                android:textSize="25sp"
                android:layout_weight="0.04" />



        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher&apos;s Portal"
        android:id="@+id/portalTxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />
</RelativeLayout>
